server {
    listen 80;
    server_name localhost;

    location / {
        # 'backend' matches the service name we will define in docker-compose
        proxy_pass http://backend:8081;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # ✅ CRITICAL: Cookie handling for HttpOnly cookies
        proxy_cookie_path / /;
        proxy_cookie_domain backend:8081 myapp.social;
        proxy_pass_header Set-Cookie;
        
        # ✅ Support for larger cookies (JWT tokens can be large)
        proxy_buffer_size 16k;
        proxy_buffers 4 16k;
        proxy_busy_buffers_size 16k;
    }
}